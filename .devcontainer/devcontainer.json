// .devcontainer/devcontainer.json
{
  "name": "Postgres & pgAdmin Devcontainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "postgres",
  "workspaceFolder": "/workspace",
  "extensions": [
    "ms-python.python", // Example extension
    "ms-azuretools.vscode-docker"
  ],
  "forwardPorts": [5432, 8080],
  "postCreateCommand": "echo 'Postgres and pgAdmin are ready!'",
  "remoteUser": "root"
}
